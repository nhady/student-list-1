node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 3306:8080"){c ->
      sh 'docker ps'
      sh 'curl -u toto:python -X GET http://127.0.0.1:3306/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
