node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("--name final -p 8081:5000 -e DEBUG=true"){c ->
      sh 'docker ps'
      sh 'docker inspect final'
      sh 'curl -u toto:python -X GET http://0.0.0.0:8081/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
