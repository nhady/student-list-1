node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("--name my_yarlayarla -p 5000:5000"){c ->
      sh 'docker ps'
      sh 'curl 8.8.8.8'
      sh 'docker inspect my_yarlayarla | grep "IPAddress"'
      sh 'curl -u toto:python -X GET http://172.17.0.2:5000/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
