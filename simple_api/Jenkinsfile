node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("4dvop-image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 5000:5000 -e DEBUG=true"){c ->
      sh 'docker ps'
      sh 'docker inspect my_image'
      sh'curl -u "toto:python" -X GET http://172.21.0.3:5000/pozos/api/v1.0/get_student_ages'
    
    }
  }
}
