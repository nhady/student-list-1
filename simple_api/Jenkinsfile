node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 5000:5000"){c ->
      sh 'docker ps'
      sh 'curl 127.0.0.1:8080'
      sh 'curl 8.8.8.8'
      sh 'curl -u toto:python -X GET http://192.168.48.158:5000/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
