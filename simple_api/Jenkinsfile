node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 8081:5000 -e DEBUG=true"){c ->
      sh 'docker ps'
      sh 'python ./student_age.py'
      sh 'curl -u toto:python -X GET http://172.17.0.2:8081/pozos/api/v1.0/get_student_ages'
      
    }
  }
  
}
