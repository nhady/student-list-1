node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 4000:80"){c ->
      sh 'docker ps'
      sh 'docker-machine ip default'
      sh 'curl -u toto:python -X GET http://192.168.48.158:4000/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
