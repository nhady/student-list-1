node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("--name my_yarlayarlu -p 5000:5000 -e DEBUG=true"){c ->
      sh 'docker ps'
      sh 'docker inspect my_yarlayarlu | grep "IPAddress"'
      sh 'curl -u toto:python -X GET http://my_yarlayarlu:5000/pozos/api/v1.0/get_student_ages'
      
    }
  }
}
