node{
  def app
  
  stage('Clone') {
    checkout scm
  }
  
  stage('Build image') {
    app = docker.build("my_image", "./simple_api/")
  }
  
  stage('Test image') {
    docker.image('my_image').withRun("-p 5000:5000 -e DEBUG=true", "--arg1 flask --arg2 run --arg3 --host --arg4 0.0.0.0"){c ->
      sh 'docker ps'
      sh 'curl -u toto:python -X GET http://0.0.0.0:5000/pozos/api/v1.0/get_student_ages'
      
    }
  }
  
}
